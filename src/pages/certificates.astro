---

<BaseLayout
    title="Certifications | Pradipta Deb"
    description="Professional certifications and specializations in AI, Machine Learning, and Healthcare"
>
    <div class="stack gap-20">
        <main class="wrapper stack gap-8">
            <Hero
                title="Certifications"
                tagline="Professional certifications and specializations in AI, Machine Learning, and Healthcare technologies."
                align="start"
            />
            
            <div class="filters">
                {categories.map(category => (
                    <button class="filter-btn" data-filter={category}>{category}</button>
                ))}
            </div>

            <div class="certificates">
                {certificates.map((cert) => <Certificate certificate={cert} />)}
            </div>
        </main>
        <ContactCTA />
    </div>
</BaseLayout>

<style>
    .filters {
        display: flex;
        flex-wrap: wrap;
        gap: 1rem;
        margin-bottom: 2rem;
    }

    .filter-btn {
        background-color: var(--gray-999);
        border: 1px solid var(--gray-800);
        color: var(--gray-300);
        padding: 0.5rem 1rem;
        border-radius: 1.5rem;
        font-size: var(--text-sm);
        cursor: pointer;
        transition: all 0.2s ease;
    }

    .filter-btn:hover {
        background-color: var(--gray-800);
        color: var(--gray-0);
    }

    .filter-btn.active {
        background-color: var(--accent-regular);
        border-color: var(--accent-regular);
        color: var(--accent-text-over);
    }

    .certificates {
        display: grid;
        grid-template-columns: repeat(auto-fill, minmax(300px, 1fr));
        gap: 2rem;
    }

    @media (min-width: 50em) {
        .certificates {
            gap: 3rem;
        }
    }
</style>

<script>
    // Add filter functionality
    const filterBtns = document.querySelectorAll('.filter-btn');
    const certificates = document.querySelectorAll('.certificate');

    filterBtns.forEach(btn => {
        btn.addEventListener('click', () => {
            const filter = btn.dataset.filter;
            
            // Update active button
            filterBtns.forEach(b => b.classList.remove('active'));
            btn.classList.add('active');

            // Filter certificates
            if (filter === 'All') {
                certificates.forEach(cert => cert.style.display = 'block');
            } else {
                certificates.forEach(cert => {
                    const tags = Array.from(cert.querySelectorAll('.tag')).map(tag => tag.textContent);
                    cert.style.display = tags.includes(filter) ? 'block' : 'none';
                });
            }
        });
    });
</script> 