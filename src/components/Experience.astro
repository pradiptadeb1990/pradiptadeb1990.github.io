---
const { position } = Astro.props;
---

<div class="experience">
    <div class="header">
        <div class="company-info">
            <div class="logo-section">
                {position.company.logo && (
                    <img 
                        src={position.company.logo} 
                        alt={`${position.company.name} logo`}
                        class="company-logo"
                    />
                )}
            </div>
            <div class="title-section">
                <h3>{position.designation}</h3>
                <p class="company">
                    <a href={position.company.url} target="_blank" rel="noopener noreferrer">
                        {position.company.name}
                    </a>
                    • {position.company.location}
                </p>
            </div>
        </div>
        <p class="duration">
            {position.start} - {position.end || 'Present'}
        </p>
    </div>
    <p class="overview">{position.company.overview}</p>
    <ul class="responsibilities">
        {position.responsibilities.map((item) => (
            <li>{item}</li>
        ))}
    </ul>
</div>

<style>
    .experience {
        padding: 2rem;
        border: 1px solid var(--gray-800);
        border-radius: 0.75rem;
        background-color: var(--gray-999_40);
        box-shadow: var(--shadow-sm);
    }

    .header {
        display: flex;
        justify-content: space-between;
        align-items: flex-start;
        margin-bottom: 1rem;
    }

    .company-info {
        display: flex;
        align-items: center;
        gap: 1.5rem;
    }

    .company-logo {
        width: 190px;
        height: 190px;
        /* Common object-fit values:
         * contain - Scales to fit while maintaining aspect ratio
         * cover - Fills container, cropping if needed
         * fill - Stretches to fill container
         * none - Original size, may overflow
         * scale-down - Like contain but won't scale up
         */
        object-fit: contain;
        border-radius: 8px;
        background-color: var(--gray-999);
        padding: 0.5rem;
    }

    .title-section {
        flex-grow: 1;
    }

    h3 {
        color: var(--gray-0);
        font-size: var(--text-xl);
        margin: 0;
    }

    .company {
        color: var(--accent-regular);
        font-size: var(--text-md);
        margin: 0.5rem 0;
    }

    .company a {
        text-decoration: none;
        color: var(--accent-regular);
    }

    .company a:hover {
        text-decoration: underline;
    }

    .duration {
        color: var(--gray-300);
        font-size: var(--text-sm);
        white-space: nowrap;
    }

    .overview {
        color: var(--gray-300);
        margin-bottom: 1.5rem;
        font-style: italic;
    }

    .responsibilities {
        list-style-type: none;
        padding: 0;
        margin: 0;
    }

    .responsibilities li {
        color: var(--gray-200);
        margin-bottom: 0.75rem;
        padding-left: 1.5rem;
        position: relative;
    }

    .responsibilities li::before {
        content: "•";
        color: var(--accent-regular);
        position: absolute;
        left: 0;
    }

    @media (max-width: 50em) {
        .header {
            flex-direction: column;
            gap: 1rem;
        }

        .company-info {
            flex-direction: column;
            align-items: flex-start;
            gap: 1rem;
        }

        .company-logo {
            width: 50px;
            height: 50px;
        }
    }
</style>